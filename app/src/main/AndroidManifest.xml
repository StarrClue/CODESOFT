<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alarmclock">

    <!-- Permissions -->
    <!-- Permission to set alarms -->
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <!-- If you're using external storage to store alarm tones, you may need the following permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Minimum SDK version required for the app -->
    <uses-sdk android:minSdkVersion="21" android:targetSdkVersion="33" />

    <!-- Application -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AlarmClock">

        <!-- MainActivity for the app -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

            <!-- Set the main activity with an Intent filter for launch -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declare other activities if needed, such as a settings activity or alarm detail activity -->

    </application>
</manifest>
